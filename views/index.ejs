<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Task Manager</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">

  <div class="main w-full min-h-screen px-6 py-10">
    
    <!-- Form Section -->
    <div class="form max-w-xl mx-auto bg-zinc-800 p-6 rounded-lg shadow-lg">
      <form action="/create" method="post">
        <input 
          class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-700 mb-3 placeholder-white"
          type="text" 
          placeholder="Title Goes Here" 
          name="title" 
        />
        <textarea 
          class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-700 mb-3 resize-none placeholder-white" 
          placeholder="Write your task here"
          name="task_details"></textarea>
        <input 
          class="w-full bg-blue-600 px-5 py-2 rounded-md cursor-pointer hover:bg-blue-700 transition-all duration-200" 
          type="submit" 
          value="Add Task" 
        />
      </form>
    </div>

    <!-- Task Section -->
    <div class="tasks max-w-xl mx-auto mt-10">
      <h1 class="text-3xl font-semibold mb-4">Tasks</h1>

      <% if (files.length > 0) { %>
        <% files.forEach((file) => { %>
          <div class="task bg-zinc-800 px-4 py-4 rounded-md mb-4">
            <p class="text-white font-medium"><%= file %></p>
            <a class="text-blue-600 hover:text-blue-400 inline-block mt-2" href="/files/<%= file %>">Read More</a>
          </div>
        <% }) %>
      <% } else { %>
        <h2 class="text-zinc-600">No tasks yet</h2>
      <% } %>

    </div>

  </div>
  
</body>
</html>
